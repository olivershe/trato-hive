{
  "name": "@trato-hive/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf dist coverage .turbo",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.2.0",
    "@paralleldrive/cuid2": "^3.0.6",
    "@trato-hive/agents": "workspace:*",
    "@trato-hive/ai-core": "workspace:*",
    "@trato-hive/auth": "workspace:*",
    "@trato-hive/data-plane": "workspace:*",
    "@trato-hive/db": "workspace:*",
    "@trato-hive/semantic-layer": "workspace:*",
    "@trato-hive/shared": "workspace:*",
    "@trpc/server": "^11.0.0-rc.653",
    "bullmq": "^5.28.1",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.2",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "eslint": "^8.57.0",
    "pino-pretty": "^13.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}