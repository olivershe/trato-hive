// Prisma Schema for Trato Hive
// This is the authoritative schema for the entire application
// All database models must be defined here

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// USERS & AUTHENTICATION (Layer 6: Governance)
// =============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  preferences   Json?     // User preferences (sidebar pinned/recent items, settings)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts         Account[]
  sessions         Session[]
  organizations    OrganizationMember[]
  documents        Document[]
  activities       Activity[]
  createdBlocks    Block[]
  databases        Database[]           @relation("DatabaseCreator")
  databaseEntries  DatabaseEntry[]      @relation("DatabaseEntryCreator")
  watchedCompanies CompanyWatch[] // Companies this user is watching
  reviewedQAAnswers QAAnswer[]    @relation("QAAnswerReviewer") // Q&A answers reviewed by user
  leadDeals        Deal[]         @relation("DealLeadPartner") // Deals where user is lead partner
  dealViewConfigs  DealViewConfig[] // User's deal view preferences
  coworkerConversations CoworkerConversation[] // Hive Copilot conversations

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================================================
// ORGANIZATIONS (Multi-tenancy)
// =============================================================================

model Organization {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  image       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members          OrganizationMember[]
  deals            Deal[]
  companies        Company[]
  documents        Document[]
  databases        Database[]
  dealFieldSchemas DealFieldSchema[] // Custom field definitions
  pages            Page[]            // Org-level pages (Phase 12)
  coworkerConversations CoworkerConversation[] // Hive Copilot conversations

  @@map("organizations")
}

enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model OrganizationMember {
  id             String           @id @default(cuid())
  organizationId String
  userId         String
  role           OrganizationRole @default(MEMBER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@map("organization_members")
}

// =============================================================================
// COMPANIES (Module 2: Discovery)
// =============================================================================

enum CompanyStatus {
  PROSPECT
  RESEARCHING
  ENGAGED
  PIPELINE
  ARCHIVED
}

model Company {
  id             String @id @default(cuid())
  organizationId String

  name        String
  domain      String?
  description String?  @db.Text
  industry    String?
  sector      String?
  founded     Int?
  employees   Int?
  revenue     Decimal? @db.Decimal(15, 2)
  location    String?
  website     String?
  linkedin    String?

  status CompanyStatus @default(PROSPECT)

  // AI-generated metadata
  aiSummary String? @db.Text
  aiScore   Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Relations
  deals         Deal[]
  dealCompanies DealCompany[] // Many-to-many junction for deals with roles
  watches       CompanyWatch[] // Users watching this company
  documents     Document[]
  facts         Fact[]
  pages         Page[] // Company pages
  qaAnswers     QAAnswer[] // Q&A answers for this company

  @@index([organizationId])
  @@index([status])
  @@map("companies")
}

// =============================================================================
// DEALS (Module 3: Deals Pipeline)
// =============================================================================

enum DealStage {
  SOURCING
  INITIAL_REVIEW
  PRELIMINARY_DUE_DILIGENCE
  DEEP_DUE_DILIGENCE
  NEGOTIATION
  CLOSING
  CLOSED_WON
  CLOSED_LOST
}

enum DealType {
  ACQUISITION
  INVESTMENT
  PARTNERSHIP
  OTHER
}

enum DealPriority {
  NONE
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum DealSource {
  REFERRAL
  OUTBOUND
  INBOUND
  AUCTION
  NETWORK
  OTHER
}

enum FieldType {
  TEXT
  NUMBER
  SELECT
  MULTI_SELECT
  DATE
  PERSON
  CHECKBOX
  URL
  STATUS
  RELATION
  ROLLUP
  FORMULA
}

enum DealCompanyRole {
  PLATFORM // Primary target company
  ADD_ON   // Bolt-on acquisition
  SELLER   // Selling party
  BUYER    // Acquiring party
  ADVISOR  // Advisory role
}

model Deal {
  id             String  @id @default(cuid())
  organizationId String
  companyId      String?

  name        String
  type        DealType
  stage       DealStage @default(SOURCING)
  value       Decimal?  @db.Decimal(15, 2)
  currency    String    @default("USD")
  probability Int? // 0-100

  expectedCloseDate DateTime?
  actualCloseDate   DateTime?

  description String? @db.Text
  notes       String? @db.Text

  // Notion-style database fields
  leadPartnerId String?
  leadPartner   User?        @relation("DealLeadPartner", fields: [leadPartnerId], references: [id], onDelete: SetNull)
  priority      DealPriority @default(NONE)
  source        DealSource?
  customFields  Json?        @db.JsonB // { "field_cuid": value, ... }

  // Phase 12: Link to Deals Database entry (when deal is represented as a database entry)
  databaseEntryId String?        @unique
  databaseEntry   DatabaseEntry? @relation("DealEntry", fields: [databaseEntryId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  company      Company?     @relation(fields: [companyId], references: [id], onDelete: SetNull)

  // Relations
  dealCompanies DealCompany[] // Many-to-many junction for companies with roles
  documents     Document[]
  activities    Activity[]
  pages         Page[] // Deals have multiple nested pages
  databases     Database[] // Databases scoped to this deal
  qaAnswers     QAAnswer[] // Q&A answers for this deal

  @@index([organizationId])
  @@index([stage])
  @@index([companyId])
  @@index([leadPartnerId])
  @@map("deals")
}

// =============================================================================
// DEAL-COMPANY JUNCTION (Many-to-Many with Roles)
// =============================================================================

model DealCompany {
  id        String          @id @default(cuid())
  dealId    String
  companyId String
  role      DealCompanyRole @default(PLATFORM)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deal    Deal    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@unique([dealId, companyId])
  @@index([dealId])
  @@index([companyId])
  @@map("deal_companies")
}

// =============================================================================
// COMPANY WATCH LIST (User tracking of companies without deals)
// =============================================================================

model CompanyWatch {
  id        String @id @default(cuid())
  companyId String
  userId    String

  notes    String?  @db.Text // Optional notes about why watching
  tags     String[] @default([]) // Tags for categorization
  priority Int      @default(0) // 0=low, 1=medium, 2=high

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([companyId, userId]) // One watch per user per company
  @@index([companyId])
  @@index([userId])
  @@map("company_watches")
}

// =============================================================================
// DOCUMENTS (Module 4: Diligence Room - Layer 1: Data Plane)
// =============================================================================

enum DocumentType {
  FINANCIAL_STATEMENT
  CONTRACT
  PRESENTATION
  MEMORANDUM
  LEGAL_DOCUMENT
  TECHNICAL_DOCUMENT
  OTHER
}

enum DocumentStatus {
  UPLOADING
  PROCESSING
  PARSED
  INDEXED
  FAILED
}

model Document {
  id             String  @id @default(cuid())
  organizationId String
  companyId      String?
  dealId         String?
  uploadedById   String

  name   String
  type   DocumentType   @default(OTHER)
  status DocumentStatus @default(UPLOADING)

  // VDR folder organization (virtual folders via path)
  folderPath String? // e.g., "/Legal/Contracts"

  // File metadata
  fileSize Int // bytes
  mimeType String
  fileUrl  String // S3 or storage URL

  // Processing metadata
  parsedAt     DateTime?
  indexedAt    DateTime?
  errorMessage String?   @db.Text

  // Reducto AI metadata
  reductoJobId String?
  reductoData  Json? // Structured data from Reducto

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  company      Company?     @relation(fields: [companyId], references: [id], onDelete: SetNull)
  deal         Deal?        @relation(fields: [dealId], references: [id], onDelete: SetNull)
  uploadedBy   User         @relation(fields: [uploadedById], references: [id])

  // Relations
  chunks    DocumentChunk[]
  facts     Fact[]
  pages     Page[] @relation("DocumentPage") // Document pages
  qaAnswers QAAnswer[] // Q&A answers referencing this document

  @@index([organizationId])
  @@index([companyId])
  @@index([dealId])
  @@index([status])
  @@index([organizationId, folderPath])
  @@map("documents")
}

// =============================================================================
// DOCUMENT CHUNKS (Layer 2: Semantic Layer)
// =============================================================================

model DocumentChunk {
  id         String @id @default(cuid())
  documentId String

  content    String @db.Text
  pageNumber Int?
  chunkIndex Int

  // Bounding box for citations (from Reducto)
  boundingBox Json?

  // Vector embedding reference (stored in Pinecone)
  vectorId String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  document Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId])
  @@index([vectorId])
  @@map("document_chunks")
}

// =============================================================================
// FACTS (Layer 2: Semantic Layer - Knowledge Graph)
// =============================================================================

enum FactType {
  FINANCIAL_METRIC
  KEY_PERSON
  PRODUCT
  CUSTOMER
  RISK
  OPPORTUNITY
  OTHER
}

model Fact {
  id         String  @id @default(cuid())
  documentId String?
  companyId  String?

  type      FactType
  subject   String
  predicate String
  object    String   @db.Text

  confidence Float @default(0.0) // 0.0 - 1.0

  // Source citation
  sourceChunkId String?
  sourceText    String? @db.Text

  // AI metadata
  extractedBy String // e.g., "claude-sonnet-4.5", "gpt-4"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  document Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)
  company  Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)

  @@index([documentId])
  @@index([companyId])
  @@index([type])
  @@map("facts")
}

// =============================================================================
// ACTIVITIES & AUDIT LOG (Layer 6: Governance)
// =============================================================================

enum ActivityType {
  DOCUMENT_UPLOADED
  DOCUMENT_PROCESSED
  DEAL_CREATED
  DEAL_STAGE_CHANGED
  COMPANY_ADDED
  AI_QUERY
  USER_ACTION
  AI_SUGGESTION_ACCEPTED
  AI_SUGGESTION_DISMISSED
  QA_APPROVED
  QA_EDITED
  QA_REJECTED
}

// =============================================================================
// Q&A ANSWER STATUS (Q&A Review Flow)
// =============================================================================

enum QAAnswerStatus {
  PENDING   // AI generated, awaiting review
  APPROVED  // Reviewer accepted as-is
  EDITED    // Reviewer modified before accepting
  REJECTED  // Reviewer rejected
}

enum ActivityStatus {
  ACTIVE
  READ
  DISMISSED
}

model Activity {
  id     String  @id @default(cuid())
  userId String?
  dealId String?

  type        ActivityType
  description String       @db.Text
  metadata    Json?

  // Status tracking for inbox actions
  status          ActivityStatus @default(ACTIVE)
  statusChangedAt DateTime?

  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  deal Deal? @relation(fields: [dealId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([dealId])
  @@index([type])
  @@index([createdAt])
  @@index([status])
  @@map("activities")
}

// =============================================================================
// INLINE DATABASES (Experience Layer - User-Created Tables)
// =============================================================================

enum DatabaseColumnType {
  TEXT
  NUMBER
  SELECT
  MULTI_SELECT
  DATE
  PERSON
  CHECKBOX
  URL
  STATUS
  RELATION
  ROLLUP
  FORMULA
}

model Database {
  id             String  @id @default(cuid())
  organizationId String
  dealId         String? // Optional: null for org-level databases (e.g., Deals Database)
  pageId         String  @unique // Database IS a page
  name           String
  description    String? @db.Text

  // Org-level flag: true for organization-wide databases like Deals Database
  isOrgLevel Boolean @default(false)

  // Column definitions stored as JSONB array:
  // [{ id: string, name: string, type: DatabaseColumnType, options?: string[], width?: number }]
  schema Json @db.JsonB

  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  deal         Deal?           @relation(fields: [dealId], references: [id], onDelete: Cascade)
  page         Page            @relation(fields: [pageId], references: [id], onDelete: Cascade)
  creator      User            @relation("DatabaseCreator", fields: [createdById], references: [id])
  entries      DatabaseEntry[]

  @@index([organizationId])
  @@index([dealId])
  @@index([createdById])
  @@index([organizationId, isOrgLevel])
  @@map("databases")
}

model DatabaseEntry {
  id         String @id @default(cuid())
  databaseId String

  // Row values stored as JSONB object: { "col_id_1": "value", "col_id_2": 123 }
  properties Json @db.JsonB

  // AI suggestion tracking (for EntityFactMapper integration)
  suggestedBy String? // e.g., "entity-fact-mapper", "document-agent"
  factIds     String[] @default([]) // Source fact IDs for citation trail

  // Every row has a page for full content
  pageId String? @unique
  page   Page?   @relation("EntryPage", fields: [pageId], references: [id], onDelete: SetNull)

  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  database Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  creator  User     @relation("DatabaseEntryCreator", fields: [createdById], references: [id])

  // Relations for RELATION column type
  sourceRelations DatabaseEntryRelation[] @relation("SourceRelations")
  targetRelations DatabaseEntryRelation[] @relation("TargetRelations")

  // Phase 12: Reverse relation for deals represented as entries
  deal Deal? @relation("DealEntry")

  @@index([databaseId])
  @@index([pageId])
  @@index([createdById])
  @@map("database_entries")
}

// =============================================================================
// DATABASE ENTRY RELATIONS (Junction table for RELATION columns)
// =============================================================================

model DatabaseEntryRelation {
  id               String @id @default(cuid())
  sourceEntryId    String
  sourceColumnId   String // The RELATION column ID in the source database
  sourceDatabaseId String // Source database for validation
  targetEntryId    String
  targetDatabaseId String // Target database for validation

  createdAt DateTime @default(now())

  sourceEntry DatabaseEntry @relation("SourceRelations", fields: [sourceEntryId], references: [id], onDelete: Cascade)
  targetEntry DatabaseEntry @relation("TargetRelations", fields: [targetEntryId], references: [id], onDelete: Cascade)

  @@unique([sourceEntryId, sourceColumnId, targetEntryId])
  @@index([sourceEntryId, sourceColumnId])
  @@index([targetEntryId])
  @@index([sourceDatabaseId])
  @@index([targetDatabaseId])
  @@map("database_entry_relations")
}

// =============================================================================
// BLOCK PROTOCOL (Experience Layer - Dynamic Content)
// =============================================================================

enum PageType {
  DEAL_PAGE     // Page associated with a deal
  COMPANY_PAGE  // Page associated with a company
  DOCUMENT_PAGE // Page associated with a document
  FREEFORM      // General-purpose page
}

model Page {
  id         String  @id @default(cuid())
  title      String?
  icon       String? // Emoji or image URL
  coverImage String?

  // Page type for entity association
  type       PageType @default(FREEFORM)
  companyId  String?  // For COMPANY_PAGE type
  documentId String?  // For DOCUMENT_PAGE type

  // Hierarchy - Pages nest infinitely within a Deal or Organization
  dealId         String?  // Optional: null for org-level pages (Phase 12)
  organizationId String?  // For org-level pages (e.g., Deals Database page)
  parentPageId   String?
  order          Int      @default(0)
  isDatabase     Boolean  @default(false)

  // Self-referential hierarchy
  parent   Page?  @relation("PageHierarchy", fields: [parentPageId], references: [id], onDelete: Cascade)
  children Page[] @relation("PageHierarchy")

  // Deal relation (optional - org-level pages don't have deals)
  deal Deal? @relation(fields: [dealId], references: [id], onDelete: Cascade)

  // Organization relation (for org-level pages)
  organization Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Entity relations (for typed pages)
  company  Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)
  document Document? @relation("DocumentPage", fields: [documentId], references: [id], onDelete: SetNull)

  // Children blocks
  blocks Block[] @relation("PageBlocks")

  // Wiki link tracking
  incomingLinks PageLink[] @relation("TargetPage")
  outgoingLinks PageLink[] @relation("SourcePage")

  // Database relation (when this page IS a database)
  database Database?

  // Entry page relation (when this page is a database entry's content)
  databaseEntry DatabaseEntry? @relation("EntryPage")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dealId])
  @@index([organizationId])
  @@index([parentPageId])
  @@index([dealId, parentPageId])
  @@index([organizationId, parentPageId])
  @@index([companyId])
  @@index([documentId])
  @@map("pages")
}

// Wiki link tracking for backlinks
model PageLink {
  id           String @id @default(cuid())
  sourcePageId String
  targetPageId String
  blockId      String // The block containing the link

  sourcePage Page @relation("SourcePage", fields: [sourcePageId], references: [id], onDelete: Cascade)
  targetPage Page @relation("TargetPage", fields: [targetPageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([sourcePageId, targetPageId, blockId])
  @@index([targetPageId])
  @@map("page_links")
}

model Block {
  id   String @id @default(cuid())
  type String // "paragraph", "heading", "image", "task_list", "deal_card", etc.

  // Content storage - Flexible JSONB
  // Example: { "text": "Hello world", "level": 1, "checked": true, "url": "https://example.com" }
  properties Json @db.JsonB

  // Tree Structure (Adjacency List)
  parentId String?
  parent   Block?  @relation("BlockHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children Block[] @relation("BlockHierarchy")

  // Ordering
  order Int @default(0) // Rank for sorting siblings

  // Context
  pageId String
  page   Page   @relation("PageBlocks", fields: [pageId], references: [id], onDelete: Cascade)

  // Synced blocks - blocks with same syncGroupId stay in sync
  syncGroupId String?

  // Metadata
  createdBy String
  creator   User   @relation(fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([pageId])
  @@index([parentId])
  @@index([pageId, order])
  @@index([syncGroupId])
  @@map("blocks")
}

// =============================================================================
// Q&A ANSWERS (Q&A Review Flow - Layer 4: Agentic)
// =============================================================================

model QAAnswer {
  id             String @id @default(cuid())
  organizationId String

  question   String  @db.Text
  dealId     String?
  documentId String?
  companyId  String?

  answer     String @db.Text
  citations  Json   @db.JsonB // Array of QACitation objects
  confidence Float?

  status          QAAnswerStatus @default(PENDING)
  editedAnswer    String?        @db.Text
  rejectionReason String?        @db.Text

  reviewerId String?
  reviewedAt DateTime?
  reviewer   User?     @relation("QAAnswerReviewer", fields: [reviewerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deal     Deal?     @relation(fields: [dealId], references: [id], onDelete: SetNull)
  document Document? @relation(fields: [documentId], references: [id], onDelete: SetNull)
  company  Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([dealId])
  @@index([documentId])
  @@index([status])
  @@map("qa_answers")
}

// =============================================================================
// DEAL FIELD SCHEMA (Custom Fields for Notion-style Database)
// =============================================================================

model DealFieldSchema {
  id             String    @id @default(cuid())
  organizationId String
  name           String    // Display name: "Deal Source", "Industry"
  type           FieldType // TEXT, SELECT, DATE, etc.
  options        Json?     @db.JsonB // For SELECT: ["Option A", "Option B"]
  required       Boolean   @default(false)
  order          Int       @default(0) // Display order

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, name])
  @@index([organizationId])
  @@map("deal_field_schemas")
}

// =============================================================================
// DEAL VIEW CONFIG (User View Preferences for Notion-style Database)
// =============================================================================

model DealViewConfig {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  columnOrder    String[] @default([]) // Includes custom field IDs
  hiddenColumns  String[] @default([])
  columnWidths   Json     @default("{}") @db.JsonB
  defaultView    String   @default("table")
  sortBy         String?
  sortDirection  String?
  filters        Json?    @db.JsonB

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
  @@map("deal_view_configs")
}

// =============================================================================
// HIVE COPILOT CONVERSATIONS (Phase 12: Coworker AI)
// =============================================================================

model CoworkerConversation {
  id             String  @id @default(cuid())
  organizationId String
  userId         String
  title          String? // Auto-generated from first message
  messages       Json    @db.JsonB // Array of { role, content, timestamp, executedActions? }
  context        Json?   @db.JsonB // { dealId?, companyId? }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([userId])
  @@index([organizationId, userId])
  @@index([updatedAt])
  @@map("coworker_conversations")
}
